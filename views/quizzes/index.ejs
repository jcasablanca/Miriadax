<form method="GET" action="/quizzes">
	<input type="text" name="search"/>
	<input type="submit" value="Buscar"/>
</form>

<table>
	<% var i; for (i=0; i < quizzes.length; i++){ %>
		<tr>
			<td><a href="/quizzes/<%= quizzes[i].id %>"><%= quizzes[i].pregunta %></a></td>
			<td><%= quizzes[i].tema %></td>
			<%if(session.user){%>
			<td><a href="/quizzes/<%= quizzes[i].id %>/edit"><button>Editar</button></a></td>
			<td>
				<form method="POST" action="/quizzes/<%= quizzes[i].id %>?_method=delete">
					<input type="submit" onClick="return confirm('Borrar: <%= quizzes[i].pregunta %>');" value="Borrar"/>
				</form>
			</td>
			<%}%>
		</tr>
	<% } %>
</table>
<%if(session.user){%>
<a href="/quizzes/new"><button>Crear pregunta</button></a>
<% }%>